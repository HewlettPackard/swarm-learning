FROM ubuntu:22.04


RUN apt-get update                              \
 && apt-get install                             \
    bind9=1:9.18.12-0ubuntu0.22.04.1            \
    bind9-dnsutils=1:9.18.12-0ubuntu0.22.04.1   \
    ca-certificates=20211016ubuntu0.22.04.1     \
    curl=7.81.0-1ubuntu1.10                     \
    gnupg2=2.2.27-3ubuntu2.1                    \
    lsb-release=11.1.0ubuntu4                   \
    ubuntu-keyring=2021.03.26                   \
    --no-install-recommends -y


RUN sed -i -e '/OPTIONS/s,"$, -m trace -L /tmp/named.log",' /etc/default/named


RUN printf -- '%s\n'                                                           \
    '#!/usr/bin/env bash'                                                      \
    ''                                                                         \
    ''                                                                         \
    '######################################################################'   \
    '## (C)Copyright 2022 Hewlett Packard Enterprise Development LP'           \
    '######################################################################'   \
    ''                                                                         \
    ''                                                                         \
    'set -x'                                                                   \
    'shopt -s extglob'                                                         \
    'shopt -s nocasematch'                                                     \
    ''                                                                         \
    ''                                                                         \
    'while [ ${#} -gt 0 ]'                                                     \
    'do'                                                                       \
    '    if [[ "${1}" =~ (-[^=]+)(=(.*)) ]]'                                   \
    '    then'                                                                 \
    '        opt="${BASH_REMATCH[1]}"'                                         \
    '        optarg="${BASH_REMATCH[3]}"'                                      \
    '        nShift=1'                                                         \
    '    else'                                                                 \
    '        opt="${1}"'                                                       \
    '        optarg="${2}"'                                                    \
    '        nShift=2'                                                         \
    '    fi'                                                                   \
    ''                                                                         \
    '    case "${opt}" in'                                                     \
    '        -d|--domain) domain="${optarg}";;'                                \
    '    esac'                                                                 \
    ''                                                                         \
    '    shift ${nShift}'                                                      \
    'done'                                                                     \
    ''                                                                         \
    ''                                                                         \
    '[[ -z "${domain}" ]] && domain="$(hostname --fqdn)"'                      \
    ''                                                                         \
    ''                                                                         \
    'printf -- "%s\n"                                    \'                    \
    '    ""                                              \'                    \
    '    "zone \"${domain}\" {"                          \'                    \
    '    "    type master;"                              \'                    \
    '    "    allow-update { 127.0.0.1; };"              \'                    \
    '    "    file \"/var/lib/bind/zones.${domain}\";"   \'                    \
    '    "};"                                            \'                    \
    '>> /etc/bind/named.conf.local'                                            \
    ''                                                                         \
    ''                                                                         \
    'cat > /var/lib/bind/zones.${domain} <<__EOF'                              \
    '\$TTL    604800'                                                          \
    '@   IN  SOA ${domain}. root.${domain}. ('                                 \
    '                  1     ; Serial'                                         \
    '             604800     ; Refresh'                                        \
    '              86400     ; Retry'                                          \
    '            2419200     ; Expire'                                         \
    '             604800 )   ; Negative Cache TTL'                             \
    ''                                                                         \
    '@   IN  NS  localhost.'                                                   \
    '__EOF'                                                                    \
    ''                                                                         \
    ''                                                                         \
    '/etc/init.d/named start'                                                  \
    ''                                                                         \
    ''                                                                         \
    "namedPID=\$(ps -C named -opid --no-header | tr -d ' ')"                   \
    'echo "Waiting for Name Server pid ${namedPID} to terminate"'              \
    'tail --pid=${namedPID} -f /tmp/named.log'                                 \
    > /usr/local/sbin/entrypoint

RUN chmod +x /usr/local/sbin/entrypoint


RUN printf -- '%s\n'                                                           \
    '#!/usr/bin/env bash'                                                      \
    ''                                                                         \
    ''                                                                         \
    '######################################################################'   \
    '## (C)Copyright 2022 Hewlett Packard Enterprise Development LP'           \
    '######################################################################'   \
    ''                                                                         \
    ''                                                                         \
    'shopt -s extglob'                                                         \
    'shopt -s nocasematch'                                                     \
    ''                                                                         \
    ''                                                                         \
    'progName="$(basename "${0}")"'                                            \
    ''                                                                         \
    'ttl=604800'                                                               \
    ''                                                                         \
    ''                                                                         \
    'while [ ${#} -gt 0 ]'                                                     \
    'do'                                                                       \
    '    if [[ "${1}" =~ (-[^=]+)(=(.*)) ]]'                                   \
    '    then'                                                                 \
    '        opt="${BASH_REMATCH[1]}"'                                         \
    '        optarg="${BASH_REMATCH[3]}"'                                      \
    '        nShift=1'                                                         \
    '    else'                                                                 \
    '        opt="${1}"'                                                       \
    '        optarg="${2}"'                                                    \
    '        nShift=2'                                                         \
    '    fi'                                                                   \
    ''                                                                         \
    '    case "${opt}" in'                                                     \
    '        -d|--dns|--fqdn) fqdn="${optarg}";;'                              \
    '        -i|--ip) ip="${optarg}";;'                                        \
    '    esac'                                                                 \
    ''                                                                         \
    '    shift ${nShift}'                                                      \
    'done'                                                                     \
    ''                                                                         \
    ''                                                                         \
    'if [[ -z "${fqdn}" || -z "${ip}" ]]'                                      \
    'then'                                                                     \
    '    echo "${progName}: error: FQDN or IP not specified"'                  \
    '    echo "${progName}: usage: ${progName} --fqdn <fqdn> --ip <IP>"'       \
    '    exit 1'                                                               \
    'fi'                                                                       \
    ''                                                                         \
    ''                                                                         \
    'nsupdate -d <<__EOF'                                                      \
    'server localhost'                                                         \
    'update delete ${fqdn} A'                                                  \
    'update add ${fqdn} ${ttl} A ${ip}'                                        \
    'show'                                                                     \
    'send'                                                                     \
    '__EOF'                                                                    \
    > /usr/local/sbin/add-dns

RUN chmod +x /usr/local/sbin/add-dns


ENTRYPOINT ["/usr/local/sbin/entrypoint"]
