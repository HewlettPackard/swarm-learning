# Assumption : SWOP is already running

# SWCI context setup
EXIT ON FAILURE
wait for ip sn1
create context test-hf with ip sn1
switch context test-hf
EXIT ON FAILURE OFF

#Change to the directory where we are mounting the host
cd /platform/swarm/usr

# Create and finalize build task
EXIT ON FAILURE
create task from taskdefs/build_hf_user_image.yaml
finalize task build_hf_user_image
get task info build_hf_user_image
get task body build_hf_user_image
list tasks
EXIT ON FAILURE OFF

# Assign build task to taskrunner
EXIT ON FAILURE
RESET TASKRUNNER defaulttaskbb.taskdb.sml.hpe
ASSIGN TASK build_hf_user_image TO defaulttaskbb.taskdb.sml.hpe WITH 1 PEERS
WAIT FOR TASKRUNNER defaulttaskbb.taskdb.sml.hpe
EXIT ON FAILURE OFF

# Build task was already run. Now build and run swarm run tasks

# Create and finalize swarm run task
EXIT ON FAILURE
create task from taskdefs/run_hf_task.yaml
finalize task run_hf_task
get task info run_hf_task
get task body run_hf_task
list tasks
EXIT ON FAILURE OFF

# Assign run task
EXIT ON FAILURE
RESET TASKRUNNER defaulttaskbb.taskdb.sml.hpe
ASSIGN TASK run_hf_task TO defaulttaskbb.taskdb.sml.hpe WITH 2 PEERS
WAIT FOR TASKRUNNER defaulttaskbb.taskdb.sml.hpe 
# Grace period for ML container to save the model,
# before the below reset command cleans up the ML and SL Containers.
SLEEP 15
RESET TASKRUNNER defaulttaskbb.taskdb.sml.hpe
EXIT ON FAILURE OFF

# List and reset training contract
EXIT ON FAILURE
LIST CONTRACTS
RESET CONTRACT defaultbb.cqdb.sml.hpe
EXIT ON FAILURE OFF

# Exit
EXIT
